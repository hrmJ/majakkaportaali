<li class="slot">
    <div class="slot-number">{{{number}}}</div>
    <div class="slot-name">{{{name}}} ({{{slot_type}}})</div>
    <div class="drag_handle"><i class="fa fa-arrows" aria-hidden="false"></i></div>
    <div class="edit-link"> <a href="javascript:void(0)"><i class="fa fa-pencil" aria-hidden="true"></i></a> </div>
    <div class="remove-link"> <a href="javascript:void(0)"><i class="fa fa-trash" aria-hidden="true"></i></a> </div>
    <input type="hidden" class="content_id" value="{{{content_id}}}"></input>
    <input type="hidden" class="header_id" value="{{{header_id}}}"></input>
    <input type="hidden" class="slot_id" value="{{{slot_id}}}"></input>
    <input type="hidden" class="slot_type" value="{{{slot_type_orig}}}"></input>
    <input type="hidden" class="addedclass" value="{{{addedclass}}}"></input>
    <input type="hidden" class="slot_name_orig" value="{{{slot_name_orig}}}"></input>
</li>
